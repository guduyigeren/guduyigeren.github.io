 //输入两个数，选择需要的结果
 import java.util.Scanner;
 public class XuanZe{
	public static void main(String args []){
		
		Scanner sc = new Scanner(System.in);
		System.out.println("请输入第一个数");
		
		int sa1 = sc.nextInt();
		System.out.println("请输入第二个数");
		
		int sb1 = sc.nextInt();
		System.out.println("请输入运算符");
		
		int sd1 = sc.next();
		if("+".equals(sd1)){
			System.out.println("结果是"+(sa1+sb1));
		}else if("-".equals(sd1)){
			System.out.println("结果是"+(sa1-sb1));
		}else if("*".equals(sd1)){
			System.out.println("结果是"+(sa1*sb1));
		}else if("/".equals(sd1)){
			System.out.println("结果是"+(sa1/sb1));
		}
	}
}